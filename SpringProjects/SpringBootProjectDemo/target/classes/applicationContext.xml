<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="a1" class="com.learning.beans.Address">
		<constructor-arg value="Bangalore" type="java.lang.String"></constructor-arg>
		<constructor-arg value="Karnataka" type="java.lang.String"></constructor-arg>
		<constructor-arg value="India" type="java.lang.String"></constructor-arg>
	</bean>

	<bean id="s1" class="com.learning.beans.Student">
		<constructor-arg value="10" type="int"></constructor-arg>
		<constructor-arg value="John Doe" type="java.lang.String"></constructor-arg>
		<constructor-arg value="John.Doe@gmail.com" type="java.lang.String"></constructor-arg>
		<constructor-arg>
			<ref bean="a1"></ref>
		</constructor-arg>
		<constructor-arg>
			<list>
				<value>Java</value>
				<value>JavaScript</value>
				<value>Go</value>
				<value>React</value>
			</list>
		</constructor-arg>
	</bean>

	<bean id="a2" class="com.learning.beans.Address">
		<constructor-arg value="Chennai" type="java.lang.String"></constructor-arg>
		<constructor-arg value="TamilNadu" type="java.lang.String"></constructor-arg>
		<constructor-arg value="India" type="java.lang.String"></constructor-arg>
	</bean>

	<bean id="s2" class="com.learning.beans.Student">
		<constructor-arg value="12" type="int"></constructor-arg>
		<constructor-arg value="Adam Gilly" type="java.lang.String"></constructor-arg>
		<constructor-arg value="adam.gilly@gmail.com" type="java.lang.String"></constructor-arg>
		<constructor-arg>
			<ref bean="a2"></ref>
		</constructor-arg>
		<constructor-arg>
			<list>
				<value>Java</value>
				<value>JavaScript</value>
				<value>Go</value>
				<value>React</value>
			</list>
		</constructor-arg>
	</bean>
</beans>